@using DndShared.Models
@using DndInator.Services
@inject ISpeciesService SpeciesService

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>
            Species Selection
        </h5>
    </div>
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading species...</p>
            </div>
        }
        else if (availableSpecies.Count == 0)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                No species available
            </div>
        }
        else
        {
            <div class="mb-3">
                <label for="speciesSelect" class="form-label">Select Species</label>
                <select class="form-select @(IsValid ? "" : "is-invalid")" 
                        id="speciesSelect"
                        @onchange="OnSpeciesSelected">
                    <option value="">Choose a species...</option>
                    @foreach (var species in availableSpecies)
                    {
                        <option value="@species.Name" selected="@(selectedSpecies?.Name == species.Name)">
                            @species.Name
                        </option>
                    }
                </select>
                @if (!IsValid)
                {
                    <div class="invalid-feedback d-block">
                        Please select a species
                    </div>
                }
            </div>

            @if (selectedSpecies != null)
            {
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">@selectedSpecies.Name</h6>
                        <p class="card-text small text-muted">@selectedSpecies.Description</p>
                        
                        <div class="row mt-3">
                            <div class="col-6">
                                <strong>Size:</strong> @selectedSpecies.Size
                            </div>
                            <div class="col-6">
                                <strong>Speed:</strong> @selectedSpecies.Speed
                            </div>
                        </div>

                        @if (selectedSpecies.Traits?.Any() == true)
                        {
                            <div class="mt-3">
                                <strong>Traits:</strong>
                                <ul class="list-unstyled mt-1">
                                    @foreach (var trait in selectedSpecies.Traits)
                                    {
                                        <li class="text-muted small">
                                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                                            @trait
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<Species> availableSpecies = new();
    private Species? selectedSpecies;
    private bool isLoading = true;

    [Parameter]
    public Species? Species { get; set; }

    [Parameter]
    public EventCallback<Species> OnSpeciesChanged { get; set; }

    [Parameter]
    public EventCallback<bool> OnValidationChanged { get; set; }

    public bool IsValid => selectedSpecies != null;

    protected override async Task OnInitializedAsync()
    {
        await LoadSpecies();
    }

    protected override void OnParametersSet()
    {
        if (Species != null)
        {
            selectedSpecies = availableSpecies.FirstOrDefault(s => s.Name == Species.Name);
        }
    }

    private async Task LoadSpecies()
    {
        isLoading = true;
        try
        {
            availableSpecies = await SpeciesService.GetAllSpeciesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading species: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnSpeciesSelected(ChangeEventArgs e)
    {
        var speciesName = e.Value?.ToString();
        selectedSpecies = availableSpecies.FirstOrDefault(s => s.Name == speciesName);

        await NotifyChanges();
    }

    private async Task NotifyChanges()
    {
        if (selectedSpecies != null)
        {
            await OnSpeciesChanged.InvokeAsync(selectedSpecies);
        }

        await OnValidationChanged.InvokeAsync(IsValid);
    }
}
