@using DndShared.Models
@using DndInator.Services
@inject IBackgroundService BackgroundService

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">
            <i class="bi bi-book-fill me-2"></i>
            Background Selection
        </h5>
    </div>
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading backgrounds...</p>
            </div>
        }
        else if (availableBackgrounds.Count == 0)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                No backgrounds available
            </div>
        }
        else
        {
            <div class="mb-3">
                <label for="backgroundSelect" class="form-label">Select Background</label>
                <select class="form-select @(IsValid ? "" : "is-invalid")" 
                        id="backgroundSelect"
                        @onchange="OnBackgroundSelected">
                    <option value="">Choose a background...</option>
                    @foreach (var bg in availableBackgrounds)
                    {
                        <option value="@bg.Name" selected="@(selectedBackground?.Name == bg.Name)">
                            @bg.Name
                        </option>
                    }
                </select>
                @if (!IsValid)
                {
                    <div class="invalid-feedback d-block">
                        Please select a background
                    </div>
                }
            </div>

            @if (selectedBackground != null)
            {
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">@selectedBackground.Name</h6>
                        <p class="card-text small text-muted">@selectedBackground.Description</p>
                        
                        @if (selectedBackground.SkillProficiencies?.Any() == true)
                        {
                            <div class="mt-2">
                                <strong>Skill Proficiencies:</strong>
                                <span class="text-muted"> @string.Join(", ", selectedBackground.SkillProficiencies)</span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedBackground.ToolProficiency))
                        {
                            <div class="mt-2">
                                <strong>Tool Proficiency:</strong>
                                <span class="text-muted"> @selectedBackground.ToolProficiency</span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedBackground.Equipment))
                        {
                            <div class="mt-2">
                                <strong>Equipment:</strong>
                                <span class="text-muted"> @selectedBackground.Equipment</span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedBackground.Feat))
                        {
                            <div class="mt-3">
                                <strong>Feat:</strong>
                                <span class="text-muted"> @selectedBackground.Feat</span>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<Background> availableBackgrounds = new();
    private Background? selectedBackground;
    private bool isLoading = true;

    [Parameter]
    public Background? Background { get; set; }

    [Parameter]
    public EventCallback<Background> OnBackgroundChanged { get; set; }

    [Parameter]
    public EventCallback<bool> OnValidationChanged { get; set; }

    public bool IsValid => selectedBackground != null;

    protected override async Task OnInitializedAsync()
    {
        await LoadBackgrounds();
    }

    protected override void OnParametersSet()
    {
        if (Background != null)
        {
            selectedBackground = availableBackgrounds.FirstOrDefault(b => b.Name == Background.Name);
        }
    }

    private async Task LoadBackgrounds()
    {
        isLoading = true;
        try
        {
            availableBackgrounds = await BackgroundService.GetAllBackgroundsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading backgrounds: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnBackgroundSelected(ChangeEventArgs e)
    {
        var backgroundName = e.Value?.ToString();
        selectedBackground = availableBackgrounds.FirstOrDefault(b => b.Name == backgroundName);

        await NotifyChanges();
    }

    private async Task NotifyChanges()
    {
        if (selectedBackground != null)
        {
            await OnBackgroundChanged.InvokeAsync(selectedBackground);
        }

        await OnValidationChanged.InvokeAsync(IsValid);
    }
}
