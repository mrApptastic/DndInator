@page "/lineages"
@using DndInator.Services
@using DndShared.Models
@inject ILineageService LineageService

<PageTitle>Lineages</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-3">
                <i class="bi bi-people-fill me-2"></i>
                D&D Lineages
            </h1>
            <p class="lead text-muted">Explore the diverse ancestries and heritages of the D&D multiverse</p>
        </div>
    </div>

    @if (lineages == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading lineages...</p>
        </div>
    }
    else if (!lineages.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            No lineages found.
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text" class="form-control form-control-lg" placeholder="ðŸ” Search lineages..." 
                       @bind="searchText" @bind:event="oninput" />
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <span class="badge bg-primary fs-6 ms-auto">
                    <i class="bi bi-collection-fill me-1"></i>
                    @FilteredLineages.Count() lineages
                </span>
            </div>
        </div>

        <div class="row">
            @foreach (var lineage in FilteredLineages)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-header bg-gradient-primary text-white py-3">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-shield-fill-check me-2"></i>
                                @lineage.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(lineage.Content))
                            {
                                <div class="lineage-content mb-3">
                                    @((MarkupString)GetTruncatedContent(lineage.Content, 300))
                                </div>
                            }
                            
                            @if (lineage.Subraces != null && lineage.Subraces.Any())
                            {
                                <div class="mt-3">
                                    <h6 class="text-secondary mb-2">
                                        <i class="bi bi-diagram-3-fill me-1"></i>
                                        Subraces (@lineage.Subraces.Count)
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var subrace in lineage.Subraces)
                                        {
                                            <span class="badge bg-secondary">@subrace.Name</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <button class="btn btn-outline-primary btn-sm w-100" @onclick="() => ShowDetails(lineage)">
                                <i class="bi bi-eye-fill me-1"></i>
                                View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (selectedLineage != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-scrollable modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title fw-bold">
                            <i class="bi bi-shield-fill-check me-2"></i>
                            @selectedLineage.Name
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseDetails"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(selectedLineage.Content))
                        {
                            <div class="lineage-content-full">
                                @((MarkupString)selectedLineage.Content)
                            </div>
                        }
                        
                        @if (selectedLineage.Subraces != null && selectedLineage.Subraces.Any())
                        {
                            <hr class="my-4" />
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-diagram-3-fill me-2"></i>
                                Subraces
                            </h5>
                            @foreach (var subrace in selectedLineage.Subraces)
                            {
                                <div class="card mb-3 border-secondary">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0 fw-bold">@subrace.Name</h6>
                                    </div>
                                    @if (!string.IsNullOrEmpty(subrace.Content))
                                    {
                                        <div class="card-body">
                                            @((MarkupString)subrace.Content)
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDetails">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .lineage-content {
        font-size: 0.9rem;
        line-height: 1.6;
        color: #495057;
    }
    
    .lineage-content-full {
        line-height: 1.8;
    }
</style>

@code {
    private List<Lineage>? lineages;
    private Lineage? selectedLineage;
    private string searchText = string.Empty;

    private IEnumerable<Lineage> FilteredLineages
    {
        get
        {
            if (lineages == null) return Enumerable.Empty<Lineage>();
            
            if (string.IsNullOrWhiteSpace(searchText))
                return lineages;
            
            return lineages.Where(l => 
                l.Name?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true ||
                l.Content?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true ||
                l.Subraces?.Any(s => s.Name?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true) == true
            );
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            lineages = await LineageService.GetAllLineagesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading lineages: {ex.Message}");
            lineages = new List<Lineage>();
        }
    }

    private string GetTruncatedContent(string content, int maxLength)
    {
        if (string.IsNullOrEmpty(content)) return string.Empty;
        
        var strippedContent = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", string.Empty);
        
        if (strippedContent.Length <= maxLength)
            return content;
        
        return strippedContent.Substring(0, maxLength) + "...";
    }

    private void ShowDetails(Lineage lineage)
    {
        selectedLineage = lineage;
    }

    private void CloseDetails()
    {
        selectedLineage = null;
    }
}
