@page "/backgrounds"
@using DndInator.Services
@using DndShared.Models
@inject IBackgroundService BackgroundService

<PageTitle>Backgrounds</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-3">
                <i class="bi bi-journal-text me-2"></i>
                D&D Backgrounds
            </h1>
            <p class="lead text-muted">Choose your character's history and origin story</p>
        </div>
    </div>

    @if (backgrounds == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading backgrounds...</p>
        </div>
    }
    else if (!backgrounds.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            No backgrounds found.
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input type="text" class="form-control form-control-lg" placeholder="ðŸ” Search backgrounds..." 
                       @bind="searchText" @bind:event="oninput" />
            </div>
            <div class="col-md-4 mb-3">
                <select class="form-select form-select-lg" @bind="selectedCategory">
                    <option value="">All Categories</option>
                    @foreach (var category in Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-2 mb-3 d-flex align-items-center justify-content-end">
                <span class="badge bg-primary fs-6">
                    <i class="bi bi-collection-fill me-1"></i>
                    @FilteredBackgrounds.Count() backgrounds
                </span>
            </div>
        </div>

        <div class="row">
            @foreach (var background in FilteredBackgrounds)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-header bg-gradient-primary text-white py-3">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-bookmark-fill me-2"></i>
                                @background.Name
                            </h5>
                            @if (!string.IsNullOrEmpty(background.Category))
                            {
                                <small class="text-white-50">@background.Category</small>
                            }
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(background.Description))
                            {
                                <p class="card-text small text-secondary mb-3">
                                    @GetTruncatedText(background.Description, 120)
                                </p>
                            }
                            
                            <div class="row g-2 mb-3">
                                @if (background.AbilityScores != null && background.AbilityScores.Any())
                                {
                                    <div class="col-12">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-lightning-charge-fill me-1"></i>
                                            <strong>Ability Scores:</strong>
                                        </small>
                                        <div class="d-flex flex-wrap gap-1 mt-1">
                                            @foreach (var ability in background.AbilityScores)
                                            {
                                                <span class="badge bg-info text-dark small">@ability</span>
                                            }
                                        </div>
                                    </div>
                                }
                                @if (background.SkillProficiencies != null && background.SkillProficiencies.Any())
                                {
                                    <div class="col-12">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-star-fill me-1"></i>
                                            <strong>Skills:</strong>
                                        </small>
                                        <div class="d-flex flex-wrap gap-1 mt-1">
                                            @foreach (var skill in background.SkillProficiencies)
                                            {
                                                <span class="badge bg-success small">@skill</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <button class="btn btn-outline-primary btn-sm w-100" @onclick="() => ShowDetails(background)">
                                <i class="bi bi-eye-fill me-1"></i>
                                View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (selectedBackground != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-scrollable modal-xl">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <div>
                            <h5 class="modal-title fw-bold mb-0">
                                <i class="bi bi-bookmark-fill me-2"></i>
                                @selectedBackground.Name
                            </h5>
                            @if (!string.IsNullOrEmpty(selectedBackground.Category))
                            {
                                <small class="text-white-50">@selectedBackground.Category</small>
                            }
                        </div>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseDetails"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(selectedBackground.Description))
                        {
                            <div class="mb-3">
                                <h6 class="text-primary fw-bold mb-2">
                                    <i class="bi bi-file-text me-1"></i>
                                    Description
                                </h6>
                                <p>@selectedBackground.Description</p>
                            </div>
                        }

                        <div class="row mb-3">
                            @if (selectedBackground.AbilityScores != null && selectedBackground.AbilityScores.Any())
                            {
                                <div class="col-md-6 mb-3">
                                    <h6 class="text-primary fw-bold mb-2">
                                        <i class="bi bi-lightning-charge-fill me-1"></i>
                                        Ability Scores
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var ability in selectedBackground.AbilityScores)
                                        {
                                            <span class="badge bg-info text-dark">@ability</span>
                                        }
                                    </div>
                                </div>
                            }
                            @if (selectedBackground.SkillProficiencies != null && selectedBackground.SkillProficiencies.Any())
                            {
                                <div class="col-md-6 mb-3">
                                    <h6 class="text-primary fw-bold mb-2">
                                        <i class="bi bi-star-fill me-1"></i>
                                        Skill Proficiencies
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var skill in selectedBackground.SkillProficiencies)
                                        {
                                            <span class="badge bg-success">@skill</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(selectedBackground.Feat))
                        {
                            <div class="mb-3">
                                <h6 class="text-primary fw-bold mb-2">
                                    <i class="bi bi-award-fill me-1"></i>
                                    Feat
                                </h6>
                                <p>@selectedBackground.Feat</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedBackground.ToolProficiency))
                        {
                            <div class="mb-3">
                                <h6 class="text-primary fw-bold mb-2">
                                    <i class="bi bi-tools me-1"></i>
                                    Tool Proficiency
                                </h6>
                                <p>@selectedBackground.ToolProficiency</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedBackground.Equipment))
                        {
                            <div class="mb-3">
                                <h6 class="text-primary fw-bold mb-2">
                                    <i class="bi bi-bag-fill me-1"></i>
                                    Equipment
                                </h6>
                                <p>@selectedBackground.Equipment</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedBackground.Source))
                        {
                            <div class="text-muted small">
                                <i class="bi bi-book me-1"></i>
                                <strong>Source:</strong> @selectedBackground.Source
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDetails">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    private List<Background>? backgrounds;
    private Background? selectedBackground;
    private string searchText = string.Empty;
    private string selectedCategory = string.Empty;

    private List<string> Categories => backgrounds?
        .Select(b => b.Category)
        .Where(c => !string.IsNullOrEmpty(c))
        .Distinct()
        .OrderBy(c => c)
        .ToList() ?? new List<string>();

    private IEnumerable<Background> FilteredBackgrounds
    {
        get
        {
            if (backgrounds == null) return Enumerable.Empty<Background>();
            
            var filtered = backgrounds.AsEnumerable();
            
            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtered = filtered.Where(b => 
                    b.Name?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true ||
                    b.Description?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true
                );
            }
            
            if (!string.IsNullOrWhiteSpace(selectedCategory))
            {
                filtered = filtered.Where(b => b.Category?.Equals(selectedCategory, StringComparison.OrdinalIgnoreCase) == true);
            }
            
            return filtered.OrderBy(b => b.Name);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            backgrounds = await BackgroundService.GetAllBackgroundsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading backgrounds: {ex.Message}");
            backgrounds = new List<Background>();
        }
    }

    private string GetTruncatedText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return string.Empty;
        
        var strippedText = System.Text.RegularExpressions.Regex.Replace(text, "<.*?>", string.Empty);
        
        if (strippedText.Length <= maxLength)
            return strippedText;
        
        return strippedText.Substring(0, maxLength) + "...";
    }

    private void ShowDetails(Background background)
    {
        selectedBackground = background;
    }

    private void CloseDetails()
    {
        selectedBackground = null;
    }
}
