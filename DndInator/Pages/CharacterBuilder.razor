    private static int DetermineProficiencyBonus(int level)
    {
        if (level < 1) return 2;
        return (int)Math.Ceiling(level / 4.0) + 1;
    }

    private static int GetAbilityModifierByName(CharacterStats stats, string? abilityName)
    {
        if (string.IsNullOrWhiteSpace(abilityName)) return 0;
        return abilityName.ToLowerInvariant() switch
        {
            "strength" => stats.GetStrengthModifier(),
            "dexterity" => stats.GetDexterityModifier(),
            "constitution" => stats.GetConstitutionModifier(),
            "intelligence" => stats.GetIntelligenceModifier(),
            "wisdom" => stats.GetWisdomModifier(),
            "charisma" => stats.GetCharismaModifier(),
            _ => 0
        };
    }

    private static int ParseArmorClass(string? armorClass, int dexMod)
    {
        if (!string.IsNullOrWhiteSpace(armorClass))
        {
            var numeric = new string(armorClass.TakeWhile(c => char.IsDigit(c)).ToArray());
            if (int.TryParse(numeric, out var ac))
            {
                return ac;
            }
        }
        return 10 + dexMod;
    }

    private static int? ParseSpeed(string speed)
    {
        var numeric = new string(speed.TakeWhile(char.IsDigit).ToArray());
        if (int.TryParse(numeric, out var value))
        {
            return value;
        }
        return null;
    }

    private static int? ParseHitDice(string hitDie, int level)
    {
        var numeric = new string(hitDie.Where(char.IsDigit).ToArray());
        if (int.TryParse(numeric, out var die))
        {
            return level; // store count of dice; original string kept in class
        }
        return null;
    }

    private static List<string> SplitCsv(string? value)
    {
        return string.IsNullOrWhiteSpace(value)
            ? new List<string>()
            : value.Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(v => v.Trim())
                .Where(v => !string.IsNullOrWhiteSpace(v))
                .ToList();
    }
