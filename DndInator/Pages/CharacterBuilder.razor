@code {
    private int activeTab = 0;
    private Character character = new()
    {
        Information = new CharacterInformation
        {
            BaseInformation = new ChraracterSheetInformation
            {
                Level = 1,
                ExperiencePoints = 0
            }
        },
        Stats = new CharacterStats()
    };
    private bool[] stepValid = new bool[10];
    private Character? builtCharacter;
    private string saveMessage = string.Empty;
    
    // For CharacterEquipmentStep
    private CharacterEquipmentStep.CharacterEquipmentData? equipmentData;

    // Tab 1: Race
    private List<DndShared.Models.Species>? availableSpecies;
    private DndShared.Models.Species? selectedSpecies;

    // Tab 2: Class
    private List<CharacterClass>? availableClasses;
    private CharacterClass? selectedClass;

    // Tab 3: Background
    private List<Background>? availableBackgrounds;
    private Background? selectedBackground;

    // Tab 4: Ability Scores
    private int strength = 10;
    private int dexterity = 10;
    private int constitution = 10;
    private int intelligence = 10;
    private int wisdom = 10;
    private int charisma = 10;
    private string lastRollDetails = "";

    // Tab 5: Skills
    private CharacterSkills selectedSkills = new();

    // Tab 6: Feats
    private List<Feat>? availableFeats;
    private List<Feat> selectedFeats = new();

    // Tab 7: Spells
    private List<Spell>? availableSpells;
    private List<Spell> selectedSpells = new();
    private int selectedSpellLevel = -1;

    // Tab 8: Equipment
    private List<DndShared.Models.Armor>? availableArmor;
    private List<DndShared.Models.Armor> selectedArmor = new();
    private List<DndShared.Models.Weapon>? availableWeapons;
    private List<DndShared.Models.Weapon> selectedWeapons = new();
    private List<DndShared.Models.AdventuringGear>? availableAdventuringGear;
    private List<DndShared.Models.AdventuringGear> selectedAdventuringGear = new();
    private List<DndShared.Models.Tool>? availableTools;
    private List<DndShared.Models.Tool> selectedTools = new();
    private CharacterWealth characterWealth = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAllData();
    }

    private async Task LoadAllData()
    {
        try
        {
            availableSpecies = await SpeciesService.GetAllSpeciesAsync();
            availableClasses = await ClassService.GetAllClassesAsync();
            availableBackgrounds = await BackgroundService.GetAllBackgroundsAsync();
            availableFeats = await FeatService.GetAllFeatsAsync();
            availableSpells = await SpellService.GetAllSpellsAsync();
            availableArmor = await ArmorService.GetAllArmorAsync();
            availableWeapons = await WeaponService.GetAllWeaponsAsync();
            availableAdventuringGear = await AdventuringGearService.GetAllAdventuringGearAsync();
            availableTools = await ToolService.GetAllToolsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void SetActiveTab(int tabIndex)
    {
        activeTab = tabIndex;
        StateHasChanged();
    }

    // Step component event handlers
    private Task HandleInformationChanged(CharacterInformation info)
    {
        character.Information = info;
        return Task.CompletedTask;
    }

    private Task HandleSpeciesChanged(DndShared.Models.Species species)
    {
        character.Race = species;
        selectedSpecies = species;
        return Task.CompletedTask;
    }

    private Task HandleClassChanged(CharacterClass classOption)
    {
        character.Class = classOption;
        selectedClass = classOption;
        return Task.CompletedTask;
    }

    private Task HandleBackgroundChanged(Background background)
    {
        character.Background = background;
        selectedBackground = background;
        return Task.CompletedTask;
    }

    private Task HandleStatsChanged(CharacterStats stats)
    {
        character.Stats = stats;
        strength = stats.Strength;
        dexterity = stats.Dexterity;
        constitution = stats.Constitution;
        intelligence = stats.Intelligence;
        wisdom = stats.Wisdom;
        charisma = stats.Charisma;
        return Task.CompletedTask;
    }

    private Task HandleSkillsChanged(CharacterSkills skills)
    {
        selectedSkills = skills;
        if (character.Information?.BaseInformation != null)
        {
            character.Information.BaseInformation.Skills = skills;
        }
        return Task.CompletedTask;
    }

    private Task HandleFeatsChanged(List<Feat> feats)
    {
        character.Feats = feats;
        selectedFeats = feats;
        return Task.CompletedTask;
    }

    private Task HandleSpellsChanged(List<Spell> spells)
    {
        selectedSpells = spells;
        return Task.CompletedTask;
    }

    private Task HandleEquipmentChanged(CharacterEquipmentStep.CharacterEquipmentData data)
    {
        equipmentData = data;
        selectedArmor = data.Armor ?? new List<DndShared.Models.Armor>();
        selectedWeapons = data.Weapons ?? new List<DndShared.Models.Weapon>();
        characterWealth = data.Wealth ?? new CharacterWealth();
        return Task.CompletedTask;
    }

    private async Task HandlePortraitUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                var buffer = new byte[file.Size];
                await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).ReadAsync(buffer);
                var imageType = file.ContentType;
                
                if (character.Information?.BaseInformation != null)
                {
                    character.Information.BaseInformation.CharacterPortrait = $"data:{imageType};base64,{Convert.ToBase64String(buffer)}";
                }
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error uploading portrait: {ex.Message}");
            }
        }
    }

    private void ClearPortrait()
    {
        if (character.Information?.BaseInformation != null)
        {
            character.Information.BaseInformation.CharacterPortrait = "";
        }
        StateHasChanged();
    }

    private void SelectSpecies(DndShared.Models.Species species)
    {
        selectedSpecies = species;
        StateHasChanged();
    }

    private void SelectClass(CharacterClass classOption)
    {
        selectedClass = classOption;
        StateHasChanged();
    }

    private void SelectBackground(Background background)
    {
        selectedBackground = background;
        StateHasChanged();
    }

    private void ToggleFeat(Feat feat)
    {
        if (selectedFeats.Contains(feat))
            selectedFeats.Remove(feat);
        else
            selectedFeats.Add(feat);
        StateHasChanged();
    }

    private void ToggleSpell(Spell spell)
    {
        if (selectedSpells.Contains(spell))
            selectedSpells.Remove(spell);
        else
            selectedSpells.Add(spell);
        StateHasChanged();
    }

    private List<Spell> GetFilteredSpells()
    {
        if (availableSpells == null) return new List<Spell>();
        
        if (selectedSpellLevel == -1)
            return availableSpells;
        
        return availableSpells.Where(s => s.Level == selectedSpellLevel).ToList();
    }

    private void ToggleArmor(DndShared.Models.Armor armor)
    {
        if (selectedArmor.Contains(armor))
            selectedArmor.Remove(armor);
        else
            selectedArmor.Add(armor);
        StateHasChanged();
    }

    private void ToggleWeapon(DndShared.Models.Weapon weapon)
    {
        if (selectedWeapons.Contains(weapon))
            selectedWeapons.Remove(weapon);
        else
            selectedWeapons.Add(weapon);
        StateHasChanged();
    }

    private void ToggleAdventuringGear(DndShared.Models.AdventuringGear gear)
    {
        if (selectedAdventuringGear.Contains(gear))
            selectedAdventuringGear.Remove(gear);
        else
            selectedAdventuringGear.Add(gear);
        StateHasChanged();
    }

    private void ToggleTool(DndShared.Models.Tool tool)
    {
        if (selectedTools.Contains(tool))
            selectedTools.Remove(tool);
        else
            selectedTools.Add(tool);
        StateHasChanged();
    }

    private async Task RollAllAbilityScores()
    {
        var rolls = new List<string>();
        
        strength = await RollAbilityScore();
        rolls.Add($"STR: {strength}");
        
        dexterity = await RollAbilityScore();
        rolls.Add($"DEX: {dexterity}");
        
        constitution = await RollAbilityScore();
        rolls.Add($"CON: {constitution}");
        
        intelligence = await RollAbilityScore();
        rolls.Add($"INT: {intelligence}");
        
        wisdom = await RollAbilityScore();
        rolls.Add($"WIS: {wisdom}");
        
        charisma = await RollAbilityScore();
        rolls.Add($"CHA: {charisma}");

        lastRollDetails = $"Rolled: {string.Join(", ", rolls)}";
        StateHasChanged();
    }

    private async Task RollSingleAbility(int abilityIndex)
    {
        int roll = await RollAbilityScore();
        
        switch (abilityIndex)
        {
            case 0: strength = roll; break;
            case 1: dexterity = roll; break;
            case 2: constitution = roll; break;
            case 3: intelligence = roll; break;
            case 4: wisdom = roll; break;
            case 5: charisma = roll; break;
        }
        
        StateHasChanged();
    }

    private async Task<int> RollAbilityScore()
    {
        // Roll 4d6, drop lowest
        var rolls = new List<int>();
        for (int i = 0; i < 4; i++)
        {
            rolls.Add(DiceService.RollDice(6));
            await Task.Delay(1); // Small delay for animation effect
        }
        rolls.Sort();
        rolls.RemoveAt(0); // Remove lowest
        return rolls.Sum();
    }

    private void UseStandardArray()
    {
        var standardArray = new[] { 15, 14, 13, 12, 10, 8 };
        strength = standardArray[0];
        dexterity = standardArray[1];
        constitution = standardArray[2];
        intelligence = standardArray[3];
        wisdom = standardArray[4];
        charisma = standardArray[5];
        StateHasChanged();
    }

    private void BuildCharacter()
    {
        // Update character Information with current selections
        if (character.Information == null)
        {
            character.Information = new CharacterInformation();
        }
        
        character.Information.Race = selectedSpecies?.Name ?? "Unknown";
        character.Information.Class = selectedClass?.Name ?? "Unknown";
        character.Information.Background = selectedBackground?.Name ?? "Unknown";
        
        // Update BaseInformation if it doesn't exist
        if (character.Information.BaseInformation == null)
        {
            character.Information.BaseInformation = new ChraracterSheetInformation();
        }

        var baseInfo = character.Information.BaseInformation;
        baseInfo.Level ??= 1;
        baseInfo.ExperiencePoints ??= 0;
        baseInfo.Skills = selectedSkills;

        // Derive spellcasting basics from selections
        var spellcasting = selectedSpells.Any() ? new CharacterSpellcasting
        {
            SpellcastingAbility = selectedClass?.PrimaryAbility,
            Spells = selectedSpells
        } : baseInfo.Spellcasting;

        if (spellcasting != null && character.Stats != null)
        {
            var abilityMod = GetAbilityModifierByName(character.Stats, spellcasting.SpellcastingAbility);
            var profBonus = DetermineProficiencyBonus(baseInfo.Level ?? 1);
            spellcasting.SpellCastingModifier ??= abilityMod;
            spellcasting.SpellSaveDC ??= 8 + profBonus + abilityMod;
            spellcasting.SpellAttackBonus ??= profBonus + abilityMod;
        }

        baseInfo.Spellcasting = spellcasting;

        // Equipment aggregation with derived shield flag
        var firstArmor = selectedArmor.FirstOrDefault();
        baseInfo.Equipment = new CharacterEquipment
        {
            Armors = selectedArmor,
            Weapons = selectedWeapons,
            AdventuringGears = selectedAdventuringGear,
            Tools = selectedTools,
            Wealth = characterWealth
        };

        // Core combat stats
        if (character.Stats != null)
        {
            var dexMod = character.Stats.GetDexterityModifier();
            baseInfo.Initiative ??= dexMod;
            baseInfo.PassivePerception ??= 10 + character.Stats.GetWisdomModifier() + (selectedSkills?.Perception == true ? DetermineProficiencyBonus(baseInfo.Level ?? 1) : 0);

            if (baseInfo.ArmorClass == null)
            {
                baseInfo.ArmorClass = ParseArmorClass(firstArmor?.ArmorClass, dexMod);
            }
        }

        // Speed from species if missing
        if (baseInfo.Speed == null && selectedSpecies?.Speed != null)
        {
            baseInfo.Speed = ParseSpeed(selectedSpecies.Speed);
        }

        // Hit dice and proficiency bonus
        if (baseInfo.HitDice == null && selectedClass?.HitPointDie != null)
        {
            baseInfo.HitDice = ParseHitDice(selectedClass.HitPointDie, baseInfo.Level ?? 1);
        }

        baseInfo.ProficiencyBonus ??= DetermineProficiencyBonus(baseInfo.Level ?? 1);

        // Proficiencies and trainings
        baseInfo.SavingThrows ??= SplitCsv(selectedClass?.SavingThrowProficiencies);
        baseInfo.WeaponTraining ??= SplitCsv(selectedClass?.WeaponProficiencies);
        baseInfo.ArmorTraining ??= SplitCsv(selectedClass?.ArmorTraining);

        // Tools and languages
        baseInfo.Tools ??= new List<string>();
        if (!string.IsNullOrWhiteSpace(selectedBackground?.ToolProficiency))
        {
            baseInfo.Tools.Add(selectedBackground.ToolProficiency);
        }
        if (selectedTools.Any())
        {
            baseInfo.Tools.AddRange(selectedTools.Select(t => t.Name ?? string.Empty).Where(n => !string.IsNullOrWhiteSpace(n)));
        }
        baseInfo.Languages ??= new List<string>();

        // Traits and features placeholders from race/class
        baseInfo.SpecialTraits ??= selectedSpecies?.Traits;
        if (selectedClass?.FullContent != null)
        {
            baseInfo.ClassFeatures ??= new List<string> { selectedClass.FullContent };
        }

        // Weapons convenience list for PDF weapon table
        baseInfo.Weapons ??= selectedWeapons.Select(w => new CharacterWeapon
        {
            Name = w.Name,
            Damage = w.Damage,
            Notes = w.Properties
        }).ToList();

        // Update Stats
        character.Stats = new CharacterStats
        {
            Strength = strength,
            Dexterity = dexterity,
            Constitution = constitution,
            Intelligence = intelligence,
            Wisdom = wisdom,
            Charisma = charisma
        };
        
        // Update other properties
        character.Race = selectedSpecies;
        character.Class = selectedClass;
        character.Background = selectedBackground;
        character.Feats = selectedFeats;
        
        // Set built character to the updated character
        builtCharacter = character;
    }

    private async Task SaveCharacter(Character character)
    {
        if (character == null) return;

        try
        {
            await StorageService.SaveCharacterAsync(character);
            saveMessage = $"✓ '{character.Information?.Name}' saved successfully!";
        }
        catch (Exception ex)
        {
            saveMessage = $"✗ Error saving character: {ex.Message}";
            Console.WriteLine($"Error saving character: {ex.Message}");
        }
    }

