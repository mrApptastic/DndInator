@page "/characterbuilder"
@using DndInator.Services
@using DndShared.Models
@using DndInator.Components
@using DndInator.Components.Steps
@using Microsoft.AspNetCore.Components.Forms
@inject ICharacterSheetService CharacterSheetService
@inject IStorageService StorageService
@inject ISpeciesService SpeciesService
@inject IClassService ClassService
@inject IBackgroundService BackgroundService
@inject IFeatService FeatService
@inject ISpellService SpellService
@inject IArmorService ArmorService
@inject IWeaponService WeaponService
@inject IAdventuringGearService AdventuringGearService
@inject IToolService ToolService
@inject IDiceService DiceService
@inject NavigationManager NavigationManager

<PageTitle>Character Builder</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-2">
                <i class="bi bi-person-plus-fill me-3"></i>
                Character Builder
            </h1>
            <p class="lead text-muted">Create your D&D 5e character step by step</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <!-- Tab Navigation -->
            <ul class="nav nav-pills nav-fill mb-4 character-tabs" id="characterBuilderTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 0 ? "active" : "")" 
                            @onclick="() => SetActiveTab(0)" 
                            type="button">
                        <i class="bi bi-1-circle-fill d-block fs-4 mb-1"></i>
                        Basic Info
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 1 ? "active" : "")" 
                            @onclick="() => SetActiveTab(1)" 
                            type="button">
                        <i class="bi bi-2-circle-fill d-block fs-4 mb-1"></i>
                        Race
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 2 ? "active" : "")" 
                            @onclick="() => SetActiveTab(2)" 
                            type="button">
                        <i class="bi bi-3-circle-fill d-block fs-4 mb-1"></i>
                        Class
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 3 ? "active" : "")" 
                            @onclick="() => SetActiveTab(3)" 
                            type="button">
                        <i class="bi bi-4-circle-fill d-block fs-4 mb-1"></i>
                        Background
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 4 ? "active" : "")" 
                            @onclick="() => SetActiveTab(4)" 
                            type="button">
                        <i class="bi bi-5-circle-fill d-block fs-4 mb-1"></i>
                        Ability Scores
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 5 ? "active" : "")" 
                            @onclick="() => SetActiveTab(5)" 
                            type="button">
                        <i class="bi bi-6-circle-fill d-block fs-4 mb-1"></i>
                        Skills
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 6 ? "active" : "")" 
                            @onclick="() => SetActiveTab(6)" 
                            type="button">
                        <i class="bi bi-6-circle-fill d-block fs-4 mb-1"></i>
                        Feats
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 7 ? "active" : "")" 
                            @onclick="() => SetActiveTab(7)" 
                            type="button">
                        <i class="bi bi-7-circle-fill d-block fs-4 mb-1"></i>
                        Spells
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 8 ? "active" : "")" 
                            @onclick="() => SetActiveTab(8)" 
                            type="button">
                        <i class="bi bi-8-circle-fill d-block fs-4 mb-1"></i>
                        Equipment
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == 9 ? "active" : "")" 
                            @onclick="() => SetActiveTab(9)" 
                            type="button">
                        <i class="bi bi-9-circle-fill d-block fs-4 mb-1"></i>
                        Preview & Export
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Tab 0: Basic Info -->
                @if (activeTab == 0)
                {
                    <div class="animate-slide-in">
                        <CharacterInformationStep 
                            Information="character.Information"
                            ShowExtendedFields="true"
                            OnInformationChanged="HandleInformationChanged"
                            OnValidationChanged="(isValid) => stepValid[0] = isValid" />
                        <div class="mt-3 d-flex justify-content-end">
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(1)"
                                    disabled="@(!stepValid[0])">
                                Next: Choose Race <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 1: Race Selection -->
                @if (activeTab == 1)
                {
                    <div class="animate-slide-in">
                        <CharacterSpeciesStep 
                            Species="character.Race"
                            OnSpeciesChanged="HandleSpeciesChanged"
                            OnValidationChanged="(isValid) => stepValid[1] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(0)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(2)"
                                    disabled="@(!stepValid[1])">
                                Next: Choose Class <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 2: Class Selection -->
                @if (activeTab == 2)
                {
                    <div class="animate-slide-in">
                        <CharacterClassStep 
                            Class="character.Class"
                            OnClassChanged="HandleClassChanged"
                            OnValidationChanged="(isValid) => stepValid[2] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(1)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(3)"
                                    disabled="@(!stepValid[2])">
                                Next: Choose Background <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 3: Background Selection -->
                @if (activeTab == 3)
                {
                    <div class="animate-slide-in">
                        <CharacterBackgroundStep 
                            Background="character.Background"
                            OnBackgroundChanged="HandleBackgroundChanged"
                            OnValidationChanged="(isValid) => stepValid[3] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(2)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(4)"
                                    disabled="@(!stepValid[3])">
                                Next: Ability Scores <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 4: Ability Scores -->
                @if (activeTab == 4)
                {
                    <div class="animate-slide-in">
                        <CharacterStatsStepExtended 
                            Stats="character.Stats"
                            OnStatsChanged="HandleStatsChanged"
                            OnValidationChanged="(isValid) => stepValid[4] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(3)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(5)"
                                    disabled="@(!stepValid[4])">
                                Next: Skills <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 5: Skills -->
                @if (activeTab == 5)
                {
                    <div class="animate-slide-in">
                        <CharacterSkillsStep 
                            Skills="character.Information?.BaseInformation?.Skills"
                            OnSkillsChanged="HandleSkillsChanged"
                            OnValidationChanged="(isValid) => stepValid[5] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(4)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(6)">
                                Next: Feats <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 6: Feats -->
                @if (activeTab == 6)
                {
                    <div class="animate-slide-in">
                        <CharacterFeatsStep 
                            Feats="character.Feats"
                            OnFeatsChanged="HandleFeatsChanged"
                            OnValidationChanged="(isValid) => stepValid[6] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(5)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(7)">
                                Next: Spells <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 7: Spells -->
                @if (activeTab == 7)
                {
                    <div class="animate-slide-in">
                        <CharacterSpellsStep 
                            Spells="character.Information?.BaseInformation?.Spellcasting?.Spells"
                            OnSpellsChanged="HandleSpellsChanged"
                            OnValidationChanged="(isValid) => stepValid[7] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(6)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-primary btn-lg" 
                                    @onclick="() => SetActiveTab(8)">
                                Next: Equipment <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 8: Equipment -->
                @if (activeTab == 8)
                {
                    <div class="animate-slide-in">
                        <CharacterEquipmentStep 
                            Equipment="equipmentData"
                            OnEquipmentChanged="HandleEquipmentChanged"
                            OnValidationChanged="(isValid) => stepValid[8] = isValid" />
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary btn-lg" @onclick="() => SetActiveTab(7)">
                                <i class="bi bi-arrow-left me-2"></i> Back
                            </button>
                            <button class="btn btn-success btn-lg" 
                                    @onclick="() => { BuildCharacter(); SetActiveTab(9); }">
                                Complete & Preview <i class="bi bi-check-circle ms-2"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- Tab 9: Preview & Export -->
                @if (activeTab == 9)
                {
                    <div class="animate-slide-in">
                        @if (builtCharacter != null)
                        {
                            <div class="card shadow-lg border-0 mb-4">
                                <div class="card-header bg-gradient-success text-white">
                                    <h4 class="mb-0">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        Character Complete: @builtCharacter.Information?.Name
                                    </h4>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(saveMessage))
                                    {
                                        <div class="alert alert-success alert-dismissible fade show">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @saveMessage
                                            <button type="button" class="btn-close" @onclick="() => saveMessage = string.Empty"></button>
                                        </div>
                                    }

                                    <div class="d-flex gap-2 mb-4 flex-wrap">
                                        <button class="btn btn-success btn-lg" @onclick="SaveCharacter" disabled="@isSaving">
                                            @if (isSaving)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                                <span>Saving...</span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-floppy me-2"></i>
                                                <span>Save Character</span>
                                            }
                                        </button>
                                        <button class="btn btn-primary btn-lg" @onclick="GeneratePDF" disabled="@isGeneratingPDF">
                                            @if (isGeneratingPDF)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                                <span>Generating...</span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-file-pdf me-2"></i>
                                                <span>Generate PDF</span>
                                            }
                                        </button>
                                        <button class="btn btn-info btn-lg" @onclick="DownloadPDF" disabled="@string.IsNullOrEmpty(pdfDataUrl)">
                                            <i class="bi bi-download me-2"></i> Download PDF
                                        </button>
                                        <button class="btn btn-outline-secondary btn-lg" @onclick="ViewMyCharacters">
                                            <i class="bi bi-people me-2"></i> My Characters
                                        </button>
                                        <button class="btn btn-outline-warning btn-lg" @onclick="ResetBuilder">
                                            <i class="bi bi-arrow-clockwise me-2"></i> Start Over
                                        </button>
                                    </div>

                                    @if (!string.IsNullOrEmpty(pdfDataUrl))
                                    {
                                        <div class="mb-4">
                                            <iframe src="@pdfDataUrl" style="width: 100%; height: 600px; border: 1px solid #ddd; border-radius: 8px;"></iframe>
                                        </div>
                                    }
                                </div>
                            </div>

                            <CharacterSheetDisplay Character="builtCharacter" />
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Please complete all previous steps to build your character.
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .character-tabs .nav-link {
        padding: 1rem;
        transition: all 0.3s ease;
        border-radius: 0.5rem;
        margin: 0 0.25rem;
    }
    
    .character-tabs .nav-link:not(.active):hover {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        transform: translateY(-2px);
    }
    
    .character-tabs .nav-link.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
    
    .bg-gradient-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .bg-gradient-success { background: linear-gradient(135deg, #52c234 0%, #061700 100%); }
    .bg-gradient-warning { background: linear-gradient(135deg, #FFD93D 0%, #FF8C38 100%); }
    .bg-gradient-info { background: linear-gradient(135deg, #0093E9 0%, #80D0C7 100%); }
    .bg-gradient-danger { background: linear-gradient(135deg, #ff6b6b 0%, #c92a2a 100%); }
    .bg-gradient-secondary { background: linear-gradient(135deg, #6c757d 0%, #343a40 100%); }
    
    .hover-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .animate-slide-in {
        animation: slideIn 0.4s ease-out;
    }
    
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .pulse-button {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }
</style>

@code {
    private int activeTab = 0;
    private Character character = new()
    {
        Information = new CharacterInformation(),
        Stats = new CharacterStats()
    };
    private bool[] stepValid = new bool[10];
    private Character? builtCharacter;
    private string pdfDataUrl = string.Empty;
    private bool isGeneratingPDF = false;
    private bool isSaving = false;
    private string saveMessage = string.Empty;
    
    // For CharacterEquipmentStep
    private CharacterEquipmentStep.CharacterEquipmentData? equipmentData;

    // Tab 0: Basic Info
    private string characterName = "";
    private CharacterAlignment selectedAlignment = CharacterAlignment.NeutralGood;
    private string characterDescription = "";
    private int characterLevel = 1;
    private int characterExperience = 0;
    private string characterPortrait = "";

    // Tab 1: Race
    private List<DndShared.Models.Species>? availableSpecies;
    private DndShared.Models.Species? selectedSpecies;

    // Tab 2: Class
    private List<CharacterClass>? availableClasses;
    private CharacterClass? selectedClass;

    // Tab 3: Background
    private List<Background>? availableBackgrounds;
    private Background? selectedBackground;

    // Tab 4: Ability Scores
    private string abilityScoreMethod = "roll";
    private int strength = 10;
    private int dexterity = 10;
    private int constitution = 10;
    private int intelligence = 10;
    private int wisdom = 10;
    private int charisma = 10;
    private string lastRollDetails = "";

    // Tab 5: Skills
    private CharacterSkills selectedSkills = new();

    // Tab 6: Feats
    private List<Feat>? availableFeats;
    private List<Feat> selectedFeats = new();

    // Tab 7: Spells
    private List<Spell>? availableSpells;
    private List<Spell> selectedSpells = new();
    private int selectedSpellLevel = -1;

    // Tab 8: Equipment
    private int equipmentTab = 0;
    private List<DndShared.Models.Armor>? availableArmor;
    private List<DndShared.Models.Armor> selectedArmor = new();
    private List<DndShared.Models.Weapon>? availableWeapons;
    private List<DndShared.Models.Weapon> selectedWeapons = new();
    private List<DndShared.Models.AdventuringGear>? availableAdventuringGear;
    private List<DndShared.Models.AdventuringGear> selectedAdventuringGear = new();
    private List<DndShared.Models.Tool>? availableTools;
    private List<DndShared.Models.Tool> selectedTools = new();
    private CharacterWealth characterWealth = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAllData();
    }

    private async Task LoadAllData()
    {
        try
        {
            availableSpecies = await SpeciesService.GetAllSpeciesAsync();
            availableClasses = await ClassService.GetAllClassesAsync();
            availableBackgrounds = await BackgroundService.GetAllBackgroundsAsync();
            availableFeats = await FeatService.GetAllFeatsAsync();
            availableSpells = await SpellService.GetAllSpellsAsync();
            availableArmor = await ArmorService.GetAllArmorAsync();
            availableWeapons = await WeaponService.GetAllWeaponsAsync();
            availableAdventuringGear = await AdventuringGearService.GetAllAdventuringGearAsync();
            availableTools = await ToolService.GetAllToolsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void SetActiveTab(int tabIndex)
    {
        activeTab = tabIndex;
        StateHasChanged();
    }

    // Step component event handlers
    private Task HandleInformationChanged(CharacterInformation info)
    {
        character.Information = info;
        return Task.CompletedTask;
    }

    private Task HandleSpeciesChanged(DndShared.Models.Species species)
    {
        character.Race = species;
        selectedSpecies = species;
        return Task.CompletedTask;
    }

    private Task HandleClassChanged(CharacterClass classOption)
    {
        character.Class = classOption;
        selectedClass = classOption;
        return Task.CompletedTask;
    }

    private Task HandleBackgroundChanged(Background background)
    {
        character.Background = background;
        selectedBackground = background;
        return Task.CompletedTask;
    }

    private Task HandleStatsChanged(CharacterStats stats)
    {
        character.Stats = stats;
        strength = stats.Strength;
        dexterity = stats.Dexterity;
        constitution = stats.Constitution;
        intelligence = stats.Intelligence;
        wisdom = stats.Wisdom;
        charisma = stats.Charisma;
        return Task.CompletedTask;
    }

    private Task HandleSkillsChanged(CharacterSkills skills)
    {
        selectedSkills = skills;
        if (character.Information?.BaseInformation != null)
        {
            character.Information.BaseInformation.Skills = skills;
        }
        return Task.CompletedTask;
    }

    private Task HandleFeatsChanged(List<Feat> feats)
    {
        character.Feats = feats;
        selectedFeats = feats;
        return Task.CompletedTask;
    }

    private Task HandleSpellsChanged(List<Spell> spells)
    {
        selectedSpells = spells;
        return Task.CompletedTask;
    }

    private Task HandleEquipmentChanged(CharacterEquipmentStep.CharacterEquipmentData data)
    {
        equipmentData = data;
        selectedArmor = data.Armor ?? new List<DndShared.Models.Armor>();
        selectedWeapons = data.Weapons ?? new List<DndShared.Models.Weapon>();
        characterWealth = data.Wealth ?? new CharacterWealth();
        return Task.CompletedTask;
    }

    private async Task HandlePortraitUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                var buffer = new byte[file.Size];
                await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).ReadAsync(buffer);
                var imageType = file.ContentType;
                characterPortrait = $"data:{imageType};base64,{Convert.ToBase64String(buffer)}";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error uploading portrait: {ex.Message}");
            }
        }
    }

    private void ClearPortrait()
    {
        characterPortrait = "";
        StateHasChanged();
    }

    private void SelectSpecies(DndShared.Models.Species species)
    {
        selectedSpecies = species;
        StateHasChanged();
    }

    private void SelectClass(CharacterClass classOption)
    {
        selectedClass = classOption;
        StateHasChanged();
    }

    private void SelectBackground(Background background)
    {
        selectedBackground = background;
        StateHasChanged();
    }

    private void ToggleFeat(Feat feat)
    {
        if (selectedFeats.Contains(feat))
            selectedFeats.Remove(feat);
        else
            selectedFeats.Add(feat);
        StateHasChanged();
    }

    private void ToggleSpell(Spell spell)
    {
        if (selectedSpells.Contains(spell))
            selectedSpells.Remove(spell);
        else
            selectedSpells.Add(spell);
        StateHasChanged();
    }

    private List<Spell> GetFilteredSpells()
    {
        if (availableSpells == null) return new List<Spell>();
        
        if (selectedSpellLevel == -1)
            return availableSpells;
        
        return availableSpells.Where(s => s.Level == selectedSpellLevel).ToList();
    }

    private void ToggleArmor(DndShared.Models.Armor armor)
    {
        if (selectedArmor.Contains(armor))
            selectedArmor.Remove(armor);
        else
            selectedArmor.Add(armor);
        StateHasChanged();
    }

    private void ToggleWeapon(DndShared.Models.Weapon weapon)
    {
        if (selectedWeapons.Contains(weapon))
            selectedWeapons.Remove(weapon);
        else
            selectedWeapons.Add(weapon);
        StateHasChanged();
    }

    private void ToggleAdventuringGear(DndShared.Models.AdventuringGear gear)
    {
        if (selectedAdventuringGear.Contains(gear))
            selectedAdventuringGear.Remove(gear);
        else
            selectedAdventuringGear.Add(gear);
        StateHasChanged();
    }

    private void ToggleTool(DndShared.Models.Tool tool)
    {
        if (selectedTools.Contains(tool))
            selectedTools.Remove(tool);
        else
            selectedTools.Add(tool);
        StateHasChanged();
    }

    private async Task RollAllAbilityScores()
    {
        var rolls = new List<string>();
        
        strength = await RollAbilityScore();
        rolls.Add($"STR: {strength}");
        
        dexterity = await RollAbilityScore();
        rolls.Add($"DEX: {dexterity}");
        
        constitution = await RollAbilityScore();
        rolls.Add($"CON: {constitution}");
        
        intelligence = await RollAbilityScore();
        rolls.Add($"INT: {intelligence}");
        
        wisdom = await RollAbilityScore();
        rolls.Add($"WIS: {wisdom}");
        
        charisma = await RollAbilityScore();
        rolls.Add($"CHA: {charisma}");

        lastRollDetails = $"Rolled: {string.Join(", ", rolls)}";
        StateHasChanged();
    }

    private async Task RollSingleAbility(int abilityIndex)
    {
        int roll = await RollAbilityScore();
        
        switch (abilityIndex)
        {
            case 0: strength = roll; break;
            case 1: dexterity = roll; break;
            case 2: constitution = roll; break;
            case 3: intelligence = roll; break;
            case 4: wisdom = roll; break;
            case 5: charisma = roll; break;
        }
        
        StateHasChanged();
    }

    private async Task<int> RollAbilityScore()
    {
        // Roll 4d6, drop lowest
        var rolls = new List<int>();
        for (int i = 0; i < 4; i++)
        {
            rolls.Add(DiceService.RollDice(6));
            await Task.Delay(1); // Small delay for animation effect
        }
        rolls.Sort();
        rolls.RemoveAt(0); // Remove lowest
        return rolls.Sum();
    }

