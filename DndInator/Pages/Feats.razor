@page "/feats"
@using DndInator.Services
@using DndShared.Models
@inject IFeatService FeatService

<PageTitle>Feats</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-3">
                <i class="bi bi-trophy-fill me-2"></i>
                D&D Feats
            </h1>
            <p class="lead text-muted">Enhance your character with special abilities and talents</p>
        </div>
    </div>

    @if (feats == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading feats...</p>
        </div>
    }
    else if (!feats.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            No feats found.
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input type="text" class="form-control form-control-lg" placeholder="ðŸ” Search feats..." 
                       @bind="searchText" @bind:event="oninput" />
            </div>
            <div class="col-md-4 mb-3">
                <select class="form-select form-select-lg" @bind="selectedCategory">
                    <option value="">All Categories</option>
                    @foreach (var category in Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-2 mb-3 d-flex align-items-center justify-content-end">
                <span class="badge bg-primary fs-6">
                    <i class="bi bi-collection-fill me-1"></i>
                    @FilteredFeats.Count() feats
                </span>
            </div>
        </div>

        <div class="row">
            @foreach (var feat in FilteredFeats)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-header bg-gradient-warning text-dark py-3">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-award-fill me-2"></i>
                                @feat.Name
                            </h5>
                            @if (!string.IsNullOrEmpty(feat.Level))
                            {
                                <small class="text-dark-50">Level: @feat.Level</small>
                            }
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(feat.Description))
                            {
                                <p class="card-text small text-secondary mb-3">
                                    @GetTruncatedText(feat.Description, 120)
                                </p>
                            }
                            
                            @if (!string.IsNullOrEmpty(feat.Prerequisite))
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-shield-check me-1"></i>
                                        <strong>Prerequisite:</strong> @feat.Prerequisite
                                    </small>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(feat.Repeatable))
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-arrow-repeat me-1"></i>
                                        <strong>Repeatable:</strong> @feat.Repeatable
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <button class="btn btn-outline-warning btn-sm w-100" @onclick="() => ShowDetails(feat)">
                                <i class="bi bi-eye-fill me-1"></i>
                                View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (selectedFeat != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-scrollable modal-xl">
                <div class="modal-content">
                    <div class="modal-header bg-warning text-dark">
                        <div>
                            <h5 class="modal-title fw-bold mb-0">
                                <i class="bi bi-award-fill me-2"></i>
                                @selectedFeat.Name
                            </h5>
                            @if (!string.IsNullOrEmpty(selectedFeat.Level))
                            {
                                <small>Level: @selectedFeat.Level</small>
                            }
                        </div>
                        <button type="button" class="btn-close" @onclick="CloseDetails"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(selectedFeat.Description))
                        {
                            <div class="mb-3">
                                <h6 class="text-warning fw-bold mb-2">
                                    <i class="bi bi-file-text me-1"></i>
                                    Description
                                </h6>
                                <p>@selectedFeat.Description</p>
                            </div>
                        }

                        <div class="row mb-3">
                            @if (!string.IsNullOrEmpty(selectedFeat.Prerequisite))
                            {
                                <div class="col-md-6 mb-3">
                                    <h6 class="text-warning fw-bold mb-2">
                                        <i class="bi bi-shield-check me-1"></i>
                                        Prerequisite
                                    </h6>
                                    <p>@selectedFeat.Prerequisite</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(selectedFeat.Repeatable))
                            {
                                <div class="col-md-6 mb-3">
                                    <h6 class="text-warning fw-bold mb-2">
                                        <i class="bi bi-arrow-repeat me-1"></i>
                                        Repeatable
                                    </h6>
                                    <p>@selectedFeat.Repeatable</p>
                                </div>
                            }
                        </div>

                        @if (selectedFeat.Benefits != null && selectedFeat.Benefits.Any())
                        {
                            <div class="mb-3">
                                <h6 class="text-warning fw-bold mb-2">
                                    <i class="bi bi-check-circle-fill me-1"></i>
                                    Benefits
                                </h6>
                                <ul>
                                    @foreach (var benefit in selectedFeat.Benefits)
                                    {
                                        <li>@benefit</li>
                                    }
                                </ul>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedFeat.Source))
                        {
                            <div class="text-muted small">
                                <i class="bi bi-book me-1"></i>
                                <strong>Source:</strong> @selectedFeat.Source
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDetails">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white !important;
    }
    
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    private List<Feat>? feats;
    private Feat? selectedFeat;
    private string searchText = string.Empty;
    private string selectedCategory = string.Empty;

    private List<string> Categories => feats?
        .Select(f => f.Category)
        .Where(c => !string.IsNullOrEmpty(c))
        .Distinct()
        .OrderBy(c => c)
        .ToList() ?? new List<string>();

    private IEnumerable<Feat> FilteredFeats
    {
        get
        {
            if (feats == null) return Enumerable.Empty<Feat>();
            
            var filtered = feats.AsEnumerable();
            
            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtered = filtered.Where(f => 
                    f.Name?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true ||
                    f.Description?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true
                );
            }
            
            if (!string.IsNullOrWhiteSpace(selectedCategory))
            {
                filtered = filtered.Where(f => f.Category?.Equals(selectedCategory, StringComparison.OrdinalIgnoreCase) == true);
            }
            
            return filtered.OrderBy(f => f.Name);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            feats = await FeatService.GetAllFeatsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading feats: {ex.Message}");
            feats = new List<Feat>();
        }
    }

    private string GetTruncatedText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return string.Empty;
        
        var strippedText = System.Text.RegularExpressions.Regex.Replace(text, "<.*?>", string.Empty);
        
        if (strippedText.Length <= maxLength)
            return strippedText;
        
        return strippedText.Substring(0, maxLength) + "...";
    }

    private void ShowDetails(Feat feat)
    {
        selectedFeat = feat;
    }

    private void CloseDetails()
    {
        selectedFeat = null;
    }
}
