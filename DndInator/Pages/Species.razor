@page "/species"
@using DndInator.Services
@using DndShared.Models
@inject ISpeciesService SpeciesService

<PageTitle>Species</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-3">
                <i class="bi bi-person-badge me-2"></i>
                D&D Species
            </h1>
            <p class="lead text-muted">Choose your character's species and heritage</p>
        </div>
    </div>

    @if (speciesList == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading species...</p>
        </div>
    }
    else if (!speciesList.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            No species found.
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input type="text" class="form-control form-control-lg" placeholder="ðŸ” Search species..." 
                       @bind="searchText" @bind:event="oninput" />
            </div>
            <div class="col-md-4 mb-3">
                <select class="form-select form-select-lg" @bind="selectedCategory">
                    <option value="">All Categories</option>
                    @foreach (var category in Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-2 mb-3 d-flex align-items-center justify-content-end">
                <span class="badge bg-primary fs-6">
                    <i class="bi bi-collection-fill me-1"></i>
                    @FilteredSpecies.Count() species
                </span>
            </div>
        </div>

        <div class="row">
            @foreach (var species in FilteredSpecies)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-header bg-gradient-success text-white py-3">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-person-fill me-2"></i>
                                @species.Name
                            </h5>
                            @if (!string.IsNullOrEmpty(species.Category))
                            {
                                <small class="text-white-50">@species.Category</small>
                            }
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(species.Description))
                            {
                                <p class="card-text small text-secondary mb-3">
                                    @GetTruncatedText(species.Description, 120)
                                </p>
                            }
                            
                            <div class="row g-2">
                                @if (!string.IsNullOrEmpty(species.CreatureType))
                                {
                                    <div class="col-12">
                                        <small class="text-muted">
                                            <i class="bi bi-egg-fill me-1"></i>
                                            <strong>Type:</strong> @species.CreatureType
                                        </small>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(species.Size))
                                {
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="bi bi-arrows-angle-expand me-1"></i>
                                            <strong>Size:</strong> @species.Size
                                        </small>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(species.Speed))
                                {
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="bi bi-speedometer me-1"></i>
                                            <strong>Speed:</strong> @species.Speed
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <button class="btn btn-outline-success btn-sm w-100" @onclick="() => ShowDetails(species)">
                                <i class="bi bi-eye-fill me-1"></i>
                                View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (selectedSpecies != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-scrollable modal-xl">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <div>
                            <h5 class="modal-title fw-bold mb-0">
                                <i class="bi bi-person-fill me-2"></i>
                                @selectedSpecies.Name
                            </h5>
                            @if (!string.IsNullOrEmpty(selectedSpecies.Category))
                            {
                                <small class="text-white-50">@selectedSpecies.Category</small>
                            }
                        </div>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseDetails"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(selectedSpecies.Description))
                        {
                            <div class="mb-3">
                                <h6 class="text-success fw-bold mb-2">
                                    <i class="bi bi-file-text me-1"></i>
                                    Description
                                </h6>
                                <p>@selectedSpecies.Description</p>
                            </div>
                        }

                        <div class="row mb-3">
                            @if (!string.IsNullOrEmpty(selectedSpecies.CreatureType))
                            {
                                <div class="col-md-4 mb-3">
                                    <h6 class="text-success fw-bold mb-2">
                                        <i class="bi bi-egg-fill me-1"></i>
                                        Creature Type
                                    </h6>
                                    <p>@selectedSpecies.CreatureType</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(selectedSpecies.Size))
                            {
                                <div class="col-md-4 mb-3">
                                    <h6 class="text-success fw-bold mb-2">
                                        <i class="bi bi-arrows-angle-expand me-1"></i>
                                        Size
                                    </h6>
                                    <p>@selectedSpecies.Size</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(selectedSpecies.Speed))
                            {
                                <div class="col-md-4 mb-3">
                                    <h6 class="text-success fw-bold mb-2">
                                        <i class="bi bi-speedometer me-1"></i>
                                        Speed
                                    </h6>
                                    <p>@selectedSpecies.Speed</p>
                                </div>
                            }
                        </div>

                        @if (selectedSpecies.Traits != null && selectedSpecies.Traits.Any())
                        {
                            <div class="mb-3">
                                <h6 class="text-success fw-bold mb-2">
                                    <i class="bi bi-star-fill me-1"></i>
                                    Traits
                                </h6>
                                <ul>
                                    @foreach (var trait in selectedSpecies.Traits)
                                    {
                                        <li>@trait</li>
                                    }
                                </ul>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedSpecies.Source))
                        {
                            <div class="text-muted small">
                                <i class="bi bi-book me-1"></i>
                                <strong>Source:</strong> @selectedSpecies.Source
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDetails">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }
    
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    private List<DndShared.Models.Species>? speciesList;
    private DndShared.Models.Species? selectedSpecies;
    private string searchText = string.Empty;
    private string selectedCategory = string.Empty;

    private List<string> Categories => speciesList?
        .Select(s => s.Category)
        .Where(c => !string.IsNullOrEmpty(c))
        .Distinct()
        .OrderBy(c => c)
        .ToList() ?? new List<string>();

    private IEnumerable<DndShared.Models.Species> FilteredSpecies
    {
        get
        {
            if (speciesList == null) return Enumerable.Empty<DndShared.Models.Species>();
            
            var filtered = speciesList.AsEnumerable();
            
            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtered = filtered.Where(s => 
                    s.Name?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true ||
                    s.Description?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true ||
                    s.CreatureType?.Contains(searchText, StringComparison.OrdinalIgnoreCase) == true
                );
            }
            
            if (!string.IsNullOrWhiteSpace(selectedCategory))
            {
                filtered = filtered.Where(s => s.Category?.Equals(selectedCategory, StringComparison.OrdinalIgnoreCase) == true);
            }
            
            return filtered.OrderBy(s => s.Name);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            speciesList = await SpeciesService.GetAllSpeciesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading species: {ex.Message}");
            speciesList = new List<DndShared.Models.Species>();
        }
    }

    private string GetTruncatedText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return string.Empty;
        
        var strippedText = System.Text.RegularExpressions.Regex.Replace(text, "<.*?>", string.Empty);
        
        if (strippedText.Length <= maxLength)
            return strippedText;
        
        return strippedText.Substring(0, maxLength) + "...";
    }

    private void ShowDetails(DndShared.Models.Species species)
    {
        selectedSpecies = species;
    }

    private void CloseDetails()
    {
        selectedSpecies = null;
    }
}
