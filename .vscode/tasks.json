{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/DndInator/DndInator.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/DndInator/DndInator.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/DndInator"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "kill-watch",
            "command": "taskkill",
            "type": "shell",
            "args": [
                "/F",
                "/IM",
                "dotnet.exe",
                "/T"
            ],
            "presentation": {
                "reveal": "silent",
                "close": true
            },
            "problemMatcher": []
        }
    ]
}
